<div class="col-md-8">
  <%= form_for(:post, url: "/posts/create", method: "post") do %>
    <div class="form-group">
      <%= label(:post, :title, "Title") %>
      <%= text_field(:post, :title, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= label(:post, :topic_id, "Choose the theme") %>
      <%= select(:post, :topic_id, options_from_collection_for_select(@topics, "id", "title"), {}, {class: "form-control"}) %>
    </div>
    <div class="form-group">
      <%= label(:post, :body, "Text") %>
      <%= text_area(:post, :body, class: "form-control", rows: "10") %>
    </div>
    <%= submit_tag("Create", class:"btn btn-primary" ) %>
  <% end %>
</div>